<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="intecap.gt.proyecto_belleza2016">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_belleza"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".Navigation_menu"
            android:label="@string/title_activity_navigation_menu"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            />
        <activity android:name=".view.Registro"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.DragNDropTiposActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.DragNDrop"
            android:screenOrientation="portrait"/>
        <activity android:name=".Video"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.Login"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".prueba.DesarrolloActivity"
            android:theme="@style/AppTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="intecap.gt.proyecto_belleza2016.prueba.Presentacion" />
        </activity>
        <activity android:name=".view.BibliografiaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.Creditos"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>